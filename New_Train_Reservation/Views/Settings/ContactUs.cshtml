@{
    ViewBag.Title = "Contact Us";
    Layout = "../Shared/_Layout_login.cshtml";


}

<!doctype html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../css/styleCU.css">
</head>


<body>
    <div class="content">
        <h1 class="welcome">You are Welcome to Contact Us at anyTime! </h1>
        <div class="contact-wrap">
            <div id="vert">
                <div class="vertical" id="send-msg">
                    <div class="form">
                        <h3>Send us a message</h3>
                        <form asp-action="ContactUs" asp-controller="Settings" method="post">

                            <div class="row">
                                <div>
                                    <label for="name" class="label">Name *</label>
                                    <input type="text" class="input-box" name="name" id="name" placeholder="  Your name">
                                </div>

                                <div>
                                    <label for="email" class="label">Email *</label>
                                    <input type="text" class="input-box" name="email" id="email" placeholder="  abcde@gmail.com">
                                </div>
                            </div>

                            <div class="row">
                                <div>
                                    <label for="phone" class="label">Phone</label>
                                    <input type="text" class="input-box" name="phone" id="phone" placeholder="  (+20) 012-345-678-90">
                                </div>

                                <div>
                                    <label for="company" class="label">Company</label>
                                    <input type="text" class="input-box" name="company" id="company" placeholder="  Company name">
                                </div>
                            </div>

                            <div class="row">
                                <div>
                                    <label for="message" class="label">Message *</label><br>
                                    <textarea class="input-box" name="message" id="message" cols="30" rows="4" placeholder="  Write your message"></textarea>
                                </div>
                            </div>

                            <div class="row">
                                <div>
                                    <input type="submit" name="submit" value="Send Message" class="btnn">


                                </div>

                            </div>
                        </form>

                        <div>
                            @{
                                if (ViewBag.submit != "")
                                {
                                    <p class="alert-success">Sent Successfully!</p>
                                }
                            }
                        </div>

                    </div>
                </div>



                <div class="vertical" id="contact-us">
                    <div class="contact-info">
                        <h3>Contact Information</h3>
                        <p class="paragraph">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestias, magnam!</p>
                        <ul>
                            <li>
                                <span class="text">9757 Aspen Lane South Richmond Hill, NY 11419</span>
                            </li>

                            <li>
                                <span class="text">+1 (291) 939 9321</span>
                            </li>

                            <li>
                                <span class="text">info@mywebsite.com</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>