@model List<New_Train_Reservation.Models.Admin_Tickets>

@{
    ViewData["Title"] = "Search_Result";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<h1>Search Result</h1>
@{
    if (TempData["Ticket_message"] != ""){
<h3 class="alert-danger">
    @TempData["Ticket_message"]
</h3>
}}
<table class="table">
    <thead>
        <tr>
            <th>
               Date
            </th>
            <th>
                From
            </th>
            <th>
               To
            </th>
            <th>
                Seat Number
            </th>
            <th>
                Price
            </th>
            <th>
                Class
            </th>
            <th>
                Train Coach Number
            </th>
            <th>
                Train Number
            </th>
           
        </tr>
    </thead>
    <tbody>
        @{

            foreach (var item in Model)
            {
                if (item != null)
                {
                    <tr>
                        <td>
                            @item.Time_Pickup
                        </td>
                        <td>
                            @item.Pickup_Station
                        </td>
                        <td>
                            @item.Destination
                        </td>
                        <td>
                            @item.Seat_Number
                        </td>
                        <td>
                            @item.Ticket_Money
                        </td>
                        <td>
                            @item.Ticket_Classes
                        </td>
                        <td>
                            @item.Train_Coach_Number
                        </td>
                        <td>
                            @item.TrainID
                        </td>
                        <td>
                            <form asp-action="Purchased_Tickets_Review" asp-route-id="@item.Id" asp-controller="User" method="post">
                                <input type="submit" class="btn btn-primary" value="Buy">
                            </form>
                        </td>
                    </tr>
                }
               
                
            }
        }
        </tbody>
</table>

