@model New_Train_Reservation.Models.Admin_Tickets

@{
    ViewData["Title"] = "Search for Ticket";
    Layout = "../Shared/_Layout_login.cshtml";

}
<body style="background-image: url('../Images/train/Search2.jpg');background-size:cover;">
    <h1>Search for Ticket</h1>

    <hr />
