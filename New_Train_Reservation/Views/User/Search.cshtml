                        </option>
                        <option value="Qalyubia">
                            Qalyubia
                        </option>
                        <option value="Qena">
                            Qena
                        </option>
                        <option value="Red Sea">
                            Red Sea
                        </option>
                        <option value="Sharqia">
                            Sharqia
                        </option>
                        <option value="Sohag">
                            Sohag
                        </option>
                        <option value="South Sinai">
                            South Sinai
                        </option>
                        <option value="Suez">
                            Suez
                        </option>

                    </select>
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Time_Pickup" class="control-label">Date</label>
                    <input type="date" class="form-control" required />
                    <span asp-validation-for="Time_Pickup" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ticket_Classes" class="control-label"></label>
                    <select class="form-control" asp-for="Ticket_Classes" required>
                        <option>
                            @Ticket_Classes.AC1
                        </option>
                        <option>
                            @Ticket_Classes.AC2

                        </option>
                    </select>

                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <p class="alert-light" style="color:saddlebrown">@ViewBag.resultmessage</p>
    </div>

    <div>
        <a asp-action="Index" asp-controller="User" style="color:saddlebrown">Back to Home Page</a>
    </div>

</body>
