@model List<New_Train_Reservation.Models.Admin_Tickets>

@{
    ViewData["Title"] = "Search_Result";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<h1>Search_Result</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Date
            </th>
            <th>
                From
            </th>
            <th>
               To
            </th>
            <th>
                Seat Number
            </th>
            <th>
                Price
            </th>
            <th>
                Class
            </th>
            <th>
                Train Coach Number
            </th>
            <th>
                Train Number
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        <tr>
            <td>
                @item.Time_Pickup
            </td>
            <td>
                @item.Pickup_Station
            </td>
            <td>
                @item.Destination
            </td>
            <td>
                @item.Seat_Number
            </td>
            <td>
                @item.Ticket_Money
            </td>
            <td>
                @item.Ticket_Classes
            </td>
            <td>
                @item.Train_Coach_Number
            </td>
            <td>
                @item.Train_Number
            </td>
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
